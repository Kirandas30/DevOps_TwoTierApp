pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
    stages {
        stage('Create Infra') {
            steps {
                sh './terraform/create_infra.sh'
            }
        }
        stage('Deploy Apps') {
            steps {
                sh './terraform/deploy_apps.sh'
            }
        }
        stage('Test Solution') {
            steps {
                sh './terraform/test_solution.sh'
            }
        }
    }
}
